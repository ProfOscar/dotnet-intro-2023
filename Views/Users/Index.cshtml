@model IEnumerable<UserModel>
@{
    ViewData["Title"] = "Users";
}

<div class="text-center">
    <h1 class="display-4">Users</h1>
    <a asp-controller="Users" asp-action="NewUser" class="text-decoration-none">
        <button type="button" class="btn btn-primary mb-3">Aggiungi utente</button>
    </a>
    <div class="card">
        <div class="card-content">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Cognome</th>
                            <th>Data di nascita</th>
                            <th>Luogo di nascita</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (UserModel user in Model)
                        {
                            <tr>
                                <td>@user.Name</td>
                                <td>@user.Surname</td>
                                <td>@user.DateOfBirth.ToShortDateString()</td>
                                <td>@user.PlaceOfBirth</td>
                                <td>
                                    <a asp-controller="Users" asp-action="UserDetail" asp-route-userId="@user.Id" class="text-decoration-none">
                                        <button type="button" class="btn btn-primary">Details</button>
                                    </a>
                                    <a asp-controller="Users" asp-action="DeleteUser" asp-route-id="@user.Id" class="text-decoration-none">
                                        <button type="button" class="btn btn-danger"><i class="bi bi-trash"></i></button>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>