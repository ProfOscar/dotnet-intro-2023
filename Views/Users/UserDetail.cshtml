@model UserModel
@{
    ViewData["Title"] = "User detail";
}

<div>
    <h3 class="text-center">Visualizziamo i dettagli del test con l'ID selezionato</p>
</div>
<div class="card mt-4 mx-auto" style="width: fit-content;">
    <div class="card-content p-3">
        @if (Model != null)
        {
            <p><span class="fw-bold">Nome:</span> @Model.Name</p>
            <p><span class="fw-bold">Cognome:</span> @Model.Surname</p>
            <p><span class="fw-bold">Data di nascita:</span> @Model.DateOfBirth.ToShortDateString()</p>
            <p><span class="fw-bold">Luogo di nascita:</span> @Model.PlaceOfBirth</p>
        }
        else
        {
            <p class="mb-0 fw-bold">User non trovato.</p>
        }
    </div>
</div>
